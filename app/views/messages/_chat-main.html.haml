.chat-main
  .main-header
    .main-header__left-box
      .main-header__left-box__group-name
        = @group.name
      .main-header__left-box__member
        Memberï¼š
        - @group.users.each_with_index do |user, i|
          = user.name
    = link_to "Edit", edit_group_path(@group), class:"edit-btn"
  .messages
    = render @messages
  .form
    = form_for [@group, @message], html: { class: 'message-form'} do |f|
      .message-form__box
        = f.text_field :content, class: 'message-form__box__input', placeholder: 'type a message'
        = f.label :image, class: 'message-form__box__img' do
          = icon('far', 'image', class: 'icon')
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'send-btn'
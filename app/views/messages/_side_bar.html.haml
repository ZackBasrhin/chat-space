  .side-header
    .side-header__box
      .side-header__box__user-name
        = current_user.name
      .side-header__box__menu
        = link_to edit_user_path(current_user) do
          %i.fa.fa-cog.fa-pull-right
        = link_to new_group_path do
          %i.fa.fa-edit.fa-pull-right

  .groups
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group__name
            = group.name
